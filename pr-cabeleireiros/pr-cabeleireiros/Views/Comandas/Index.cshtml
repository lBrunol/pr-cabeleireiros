
@{
    ViewBag.Title = "Index";
    Layout = "~/Layouts/_LayoutDefault.cshtml";
}
<div class="col-md-3">

</div>
<div class="col-md-9">
    <div class="box-site -small">
        <h1 class="title-section"><span class="icon-doc-text"></span>Nova Comanda</h1>
        <div class="row">
            <div class="form-group col-md-4">
                <label>Data</label>
                <input type="date" class="form-control" />
            </div>
            <div class="form-group col-md-8">
                <label>Cliente</label>
                <div class="input-group">
                    <input type="text" class="form-control" />
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default">+ Incluir</button>
                    </span>
                </div>
            </div>
        </div>
        <hr class="separator-fields" />
        <div class="row">
            <div class="col-md-12">
                <div class="text-group">
                    <label class="text">Serviços prestados</label><button type="button" class="btn btn-default button">+ Incluir</button>
                </div>
                <table class="table table-site"> 
                    <thead> 
                        <tr> 
                            <th>Código</th> 
                            <th>Item</th> 
                            <th>Valor</th> 
                            <th>Desconto</th> 
                            <th>Funcionário</th>
                            <th></th>
                        </tr> 
                    </thead> 
                    <tbody> 
                        <tr> 
                            <th scope="row">1</th> 
                            <td>Escova</td> 
                            <td>R$ 35,00</td> 
                            <td><input type="text" class="input form-control" /></td>
                            <td>Joana Soares</td>
                            <td><button class="btn btn-danger btn-sm"><span class="icon-trash-empty"></span> Excluir</button></td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Manicure</td>
                            <td>R$ 20,00</td>
                            <td><input type="text" class="input form-control" /></td>
                            <td>Joana Soares</td>
                            <td><button class="btn btn-danger btn-sm"><span class="icon-trash-empty"></span> Excluir</button></td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Pedicure</td>
                            <td>R$ 25,00</td>
                            <td><input type="text" class="input form-control" /></td>
                            <td>Joana Soares</td>
                            <td><button class="btn btn-danger btn-sm"><span class="icon-trash-empty"></span> Excluir</button></td>
                        </tr>
                    </tbody> 
                </table>
            </div>
        </div>
        <hr class="separator-fields" />
        <div class="row">
            <div class="col-md-12">
                <div class="text-right">
                    <p><strong>Valor total:</strong> R$ 80,00</p>
                    <p><strong>Desconto:</strong> R$ 10,00</p>
                    <p><strong>Caixinha:</strong> R$ 0,00</p>
                    <hr class="separator-fields">
                    <p><strong>Total do pedido:</strong> R$ 70,00</p>
                </div>
            </div>
        </div>
        <hr class="separator-fields" />
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default"><span class="icon-doc-text"></span> Nova comanda</button>
                <button class="btn btn-success"><span class="icon-money"></span>Receber</button>
                <button class="btn btn-danger"><span class="icon-cancel"></span>Cancelar Comanda</button>
            </div>
        </div>
    </div>
</div>