@{
    ViewBag.Title = "View";
    Layout = "~/Layouts/_LayoutDefault.cshtml";
}
<style>
    .navbar.navbar-primary { display: none; }
</style>
<div id="login">
    <h1 class="text-center">PR Cabelereiros</h1>
    <form>
        <div class="form-group">
            <label for="txtUsuario">Usuário</label>
            <input type="email" class="form-control" id="txtUsuario" placeholder="Usuário">
        </div>
        <div class="form-group">
            <label for="txtSenha">Senha</label>
            <input type="password" class="form-control" id="txtSenha" placeholder="Senha">
        </div>
        <button type="submit" class="btn btn-default"><span class="icon-logout"></span> Entrar</button>
    </form>
</div>