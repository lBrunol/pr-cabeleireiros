/**
 * Estilização geral do site
 */
 
html {
	font-size: 16px;
}

body {
	font-family: 'Open Sans', sans-serif;
	font-size: 1rem;
	color: $content-color;
	background-color: $body-color;
}

a {
	color: $link-color;

	&:hover,
	&:focus,
	&:active {
		color: darken(@color, 20%);
	}
}

h1,
h2,
h3,
h4 { 
	font-family: 'Montserrat', sans-serif;
	font-weight: bold;
	color: $title-color;
}

h1 {
	//26px
	font-size: 1.625rem;
	margin: 0 0 1.25rem 0;
}

h2 {
	//22px
	font-size: 1.375rem;
	margin: 0 0 0.9375rem 0;
}

h3 {
	font-size: 1.125rem;
	margin: 0 0 0.9375rem 0;
}

h4 {
	font-size: 1rem;
	margin: 0 0 0.625rem 0;
}

ul {
	margin: 0;
	padding: 0;
}

li {
	list-style: none;
}

object {
	display: block;
}