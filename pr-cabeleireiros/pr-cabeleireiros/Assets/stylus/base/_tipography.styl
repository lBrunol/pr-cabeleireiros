/**
 * Estilização de textos do site
 */
 
// Icon fonts
@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700|Open+Sans:400,700');

@font-face {
  font-family: 'pr-cabeleireiros';
  src: url('../Fonts/pr-cabeleireiros.eot?60256622');
  src: url('../Fonts/pr-cabeleireiros.eot?60256622#iefix') format('embedded-opentype'),
       url('../Fonts/pr-cabeleireiros.ttf?60256622') format('truetype'),
       url('../Fonts/pr-cabeleireiros.svg?60256622#pr-cabeleireiros') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "pr-cabeleireiros";
  font-style: normal;
  font-weight: normal;
  speak: none; 
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  margin-right: .2em;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
  font-size: 120%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-shadow: 1px 1px 1px rgba(127, 127, 127, 0.3);
}