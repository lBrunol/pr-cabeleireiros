.box-site {

	background-color: $box-background; 
	border: 1px solid;
    border-color: #e5e6e9 #dfe0e4 #d0d1d5;
    border-radius: 3px;

	&.-small {
		padding: 0.75rem;
		margin-bottom: 0.75rem; 
	}

	&.-medium {
		padding: 0.9375rem;
		margin-bottom: 0.9375rem;
	}

	&.-large {
		padding: 1.125rem;
		margin-bottom: 1.125rem;
	}

	&.-fixheight {
		min-height: 250px;

		&.-overflowy {
			overflow-y: auto;
		}
	}
}