.custom-checkbox {
	
	width: 20px;
	height: 20px;

	&.-small {
		width: 15px;
		height: 15px;

		> .indicator {
			width: @width;
			height: @height;

			&:after {
				top: 3px;
				left: 6px;
				width: 3px;
				height: 8px;
			}
		}
	}

	cursor: pointer;
	position: relative;

	&:hover input ~ .indicator {
		background: darken($background-color,20%);
	}

	&:hover input:checked ~ .indicator {
		background: darken($background-color,20%);
	}

	input {
		position: absolute;
		z-index: -1;
		opacity: 0;

		&:checked ~ .indicator:after {
			display: block;
		}

		&:disabled ~ .indicator {
			pointer-events: none;
			opacity: .6;
		}
	}

	> .indicator {
		position: absolute;
		top: 2px;
		left: 0;
		width: 20px;
		height: 20px;
		background: #e6e6e6;

		&:after {			
			content: '';
			top: 3px;
			left: 8px;
			width: 5px;
			height: 11px;
			transform: rotate(45deg);
			border: solid #d9534f;
			border-width: 0 2px 2px 0;
			display: none;
			position: absolute;
		}
	}
}